<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:popupbtn="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/ll_head"
    tools:context=".MainActivity">


    <com.rcw.popuplib.FilterPopupButton
        android:id="@+id/filter_popup_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="测试1"
        android:textSize="20dp"
        android:background="@null"
        popupbtn:normalIcon="@drawable/arrow_down"
        popupbtn:pressIcon="@drawable/arrow_up_blue"
        />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorGrey"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_flow_popup"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="测试2"
            android:textSize="20dp"
            android:background="@null"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dp_10"
            android:layout_gravity="center"
            android:src="@drawable/arrow_down"/>
    </LinearLayout>

</LinearLayout>
